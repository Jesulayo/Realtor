                            VerticalOptions="Center" />
                    </Frame>

                    <Label
                        Grid.Column="2"
                        Margin="10"
                        HorizontalOptions="Start"
                        Style="{StaticResource WhiteLargeBold}"
                        Text="{Binding Seller}" />
                </Grid>


